<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="report_bank_statement_line_payment_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <div class="page">
                <div class="row mt64 pull-right">
                    <div class="col-12">
                        <t t-if="o.amount&gt;0">
                            <strong>Payment Reception:
                                <span t-field="o.name" />
                            </strong>
                        </t>
                        <t t-if="o.amount&lt;0">
                            <strong>Payment Disposal:
                                <span t-field="o.name" />
                            </strong>
                        </t>
                        <br />
                        <t t-if="o.date">
                            <strong>Date:
                                <span t-field="o.date" />
                            </strong>
                        </t>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <span>
                            <strong>
                                Name: <span t-field="o.partner_id.name" />
                            </strong>
                        </span>
                        <br />
                        <span>
                            <strong>
                                Function: <span t-field="o.partner_id.function" />
                            </strong>
                        </span>
                        <br />
                        <span>
                            <strong>
                                Amount:
                                <table style="width: 100%">
                                    <tr>
                                        <td>
                                            <span
                                                t-field="o.amount"
                                                t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                                            />
                                        </td>
                                        <td>
                                             (<span
                                                t-esc="o.currency_id.amount_to_text(o.amount)"
                                            />)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            (in numbers)
                                        </td>
                                        <td>
                                             (in letters)
                                        </td>
                                    </tr>
                                </table>
                            </strong>
                        </span>
                        <br />
                        <span>
                            <strong>
                                Reason <span
                                    t-if="o.amount&gt;0"
                                    style="text-decoration: underline;"
                                >reception</span><span
                                    t-if="o.amount&lt;0"
                                >reception</span> / <span
                                    t-if="o.amount&lt;0"
                                    style="text-decoration: underline;"
                                >disposal</span><span
                                    t-if="o.amount&gt;0"
                                >disposal</span>:
                            </strong>

                            <strong>
                                <span t-field="o.payment_ref" />
                            </strong>
                        </span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-12">
                        <table
                            class="table table-bordered"
                            style="table-layout: fixed"
                            id="signatures_table"
                        >
                            <tbody>
                                <tr>
                                    <td rowspan="3" colspan="4"><strong
                                        >Signatures</strong></td>
                                    <td rowspan="1" colspan="4"><strong
                                        >Unit Manager</strong></td>
                                    <td rowspan="1" colspan="4"><strong
                                        >Financial-Accounting Department</strong></td>
                                </tr>
                                <tr>
                                    <td rowspan="2" colspan="4">
                                        <br />
                                        <br />
                                    </td>
                                    <td rowspan="2" colspan="4">
                                        <br />
                                        <br />
                                    </td>
                                </tr>
                                <tr />
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-12">
                        <table
                            class="table table-bordered"
                            style="table-layout: fixed"
                            id="details_table"
                        >
                            <tbody>
                                <tr>
                                    <td rowspan="10" colspan="2">
                                        <span
                                            style="
                                                text-transform: uppercase;
                                                text-align: center;
                                                font-weight: bold; line-height: 20px;
                                                -webkit-transform:rotate(270deg);
                                                width: 100px; display: block;"
                                        >
                                            <strong
                                            >To be completed only for disposals</strong>
                                        </span>
                                    </td>
                                    <td rowspan="10" colspan="10">
                                        <strong
                                        >ADDITIONAL DATA REGARDING THE BENEFICIARY OF THE AMOUNT:</strong>
                                        <br />
                                        <br />
                                        <span
                                        >Identity document …… Series ……. No. …………………...…………….</span>
                                        <br />
                                        <span
                                        >I received the amount of ……………...……………………………….. lei</span>
                                        <br />
                                        <span
                                        >                                         (in figures)</span>
                                        <br />
                                        <span
                                        >                       Date .........................</span>
                                        <br />
                                        <span
                                        >                       Signature ....................</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_bank_statement_line_payment_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="o.is_l10n_ro_record">
                    <t t-set="lang" t-value="o.partner_id.lang" />
                    <t
                        t-call="l10n_ro_payment_receipt_report.report_bank_statement_line_payment_document"
                        t-lang="lang"
                    />
                </t>
            </t>
        </t>
    </template>





</odoo>
