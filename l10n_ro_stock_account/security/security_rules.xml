<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data noupdate="1">

	    <record id="restrict_account_stock_location_accountant" model="ir.rule">
	        <field name="name">Acount Location Accountant Rule</field>
	        <field name="model_id" ref="stock.model_stock_location" />
	        <field name="perm_read" eval="True" />
	        <field name="perm_write" eval="True" />
	        <field name="perm_create" eval="True" />
	        <field name="perm_unlink" eval="True" />
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('account.group_account_manager'))]" />
	    </record>

	    <record id="restrict_account_stock_location_all" model="ir.rule">
	        <field name="name">Acount Location User Rule</field>
	        <field name="model_id" ref="stock.model_stock_location" />
	        <field name="perm_read" eval="False" />
	        <field name="perm_write" eval="True" />
	        <field name="perm_create" eval="True" />
	        <field name="perm_unlink" eval="True" />
	        <field name="domain_force">[('l10n_ro_accounting_location','!=',True)]</field>
	        <field name="perm_unlink" eval="False" />
	        <field name="groups" eval="[(4, ref('base.group_user'))]" />
	    </record>

	    <record id="restrict_account_product_category_accountant" model="ir.rule">
	        <field name="name">Acount Category Accountant Rule</field>
	        <field name="model_id" ref="product.model_product_category" />
	        <field name="perm_read" eval="True" />
	        <field name="perm_write" eval="True" />
	        <field name="perm_create" eval="True" />
	        <field name="perm_unlink" eval="True" />
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('account.group_account_manager'))]" />
	    </record>

	    <record id="restrict_account_product_category_all" model="ir.rule">
	        <field name="name">Acount Category User Rule</field>
	        <field name="model_id" ref="product.model_product_category" />
	        <field name="perm_read" eval="False" />
	        <field name="perm_write" eval="True" />
	        <field name="perm_create" eval="True" />
	        <field name="perm_unlink" eval="True" />
	        <field name="domain_force">[('l10n_ro_accounting_category','!=',True)]</field>
	        <field name="groups" eval="[(4, ref('base.group_user'))]" />
	    </record>
	</data>
</odoo>
