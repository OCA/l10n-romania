<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_category_stock_add_romania_form" model="ir.ui.view">
        <field name="name">view_product_category_stock_add_romania_form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="stock.product_category_form_view_inherit" />
        <field name="priority" eval="51" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='first']" position="inside">
                <group string="Accounting Category">
                    <field name="l10n_ro_accounting_category" />
                    <field
                        name="l10n_ro_accounting_category_id"
                        attrs="{'invisible':[('l10n_ro_accounting_category','=',True)],'required':[('l10n_ro_accounting_category','=',False)]}"
                    />
                    <button
                        string="Fix Accounting Product Category"
                        name="l10n_ro_fixProductCategory_accounting"
                        type="object"
                        attrs="{'invisible':[('l10n_ro_accounting_category','=',False)]}"
                    />
                 </group>
            </xpath>
        </field>
    </record>

    <record id="view_product_category_add_romania_form" model="ir.ui.view">
        <field name="name">view_product_category_add_romania_form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="stock_account.view_category_property_form" />
        <field name="priority" eval="50" />
        <field name="arch" type="xml">
            <field name="property_stock_valuation_account_id" position="after">
                <field name="is_l10n_ro_record" invisible="1" />
                <field
                    name="l10n_ro_stock_account_change"
                    attrs="{'invisible': [('is_l10n_ro_record', '=', False)]}"
                />
                <field name="l10n_ro_hide_stock_in_out_account" invisible="1" />
            </field>
            <field name="property_stock_account_input_categ_id" position="attributes">
                <attribute name="attrs">
                    {'invisible':[('l10n_ro_hide_stock_in_out_account','=',True)]}
                </attribute>
            </field>
            <field name="property_stock_account_output_categ_id" position="attributes">
                <attribute name="attrs">
                    {'invisible':[('l10n_ro_hide_stock_in_out_account','=',True)]}
                </attribute>
            </field>
        </field>
    </record>
</odoo>
