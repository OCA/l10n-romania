<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr='//group[@id="header_right_group"]' position="inside">
                <field name="id" invisible="1"/>
                <field name="l10n_ro_invoice_for_pickings_ids" attrs="{'invisible':['|', ('is_l10n_ro_record', '=', False),
                ('move_type', 'not in', ['out_invoice'])], 'readonly': [('state', '!=', 'draft')]}"
                domain="[('state','=','done'),('picking_type_code','=','outgoing'),
                ('l10n_ro_notice','=',True),'|',
                ('l10n_ro_notice_invoice_id','=',False),('l10n_ro_notice_invoice_id','=',id)]"
                widget="many2many_tags"
                />
                <field name="l10n_ro_bill_for_pickings_ids" attrs="{'invisible':['|', ('is_l10n_ro_record', '=', False),
                ('move_type', 'not in', ['in_invoice'])], 'readonly': [('state', '!=', 'draft')]}"
                domain="[('state','=','done'),('picking_type_code','=','incoming'),
                ('l10n_ro_notice','=',True),'|',
                ('l10n_ro_notice_bill_id','=',False), ('l10n_ro_notice_bill_id','=',id)]"
                widget="many2many_tags"
                />

            </xpath>
        </field>
    </record>
</odoo>
