<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="41" />
        <field name="inherit_id" ref="l10n_ro_config.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='module_l10n_ro_stock_account']" position="before">
            	<div class="col-12 col-lg-6 o_setting_box" id="module_l10n_ro_stock_account_notice">
	                <div class="o_setting_left_pane">
	                	<field name="module_l10n_ro_stock_account_notice" invisible="1"/>
            		</div>
	                <div class="o_setting_right_pane">
	                	<label for="module_l10n_ro_stock_account_notice" />
	                    <div class="content-group" attrs="{'invisible': [('module_l10n_ro_stock_account_notice', '=', False)]}">
                            <div class="row mt16">
                                <label for="property_stock_picking_payable_account_id" class="col-lg-3 o_light_label"/>
                                <field name="property_stock_picking_payable_account_id" placeholder="Select 408"/>
                            </div>
                            <div class="row mt16">
                                <label for="property_stock_picking_receivable_account_id" class="col-lg-3 o_light_label"/>
                                <field name="property_stock_picking_receivable_account_id" placeholder="Select 418"/>
                            </div>
			                <div class="row mt16">
			                    <label for="property_notice_position_id" class="col-lg-3 o_light_label"/>
			                    <field name="property_notice_position_id"/>
			                </div>
			                <div class="row mt16">
			                    <label for="property_notice_include_vat" class="col-lg-3 o_light_label"/>
			                    <field name="property_notice_include_vat"/>
			                </div>
	                    </div>
	                </div>
            	</div>
            </xpath>
        </field>
    </record>
</odoo>
