<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_l10n_ro_statement_daily">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12" />
            <t t-set="data_report_header_spacing" t-value="9" />
            <t t-set="data_report_dpi" t-value="110" />
            <t t-foreach="docs" t-as="o">
                <t
                    t-set="with_currency"
                    t-value="o.currency_id != o.company_id.currency_id"
                />
                <div class="header">
                    <div>
                        <div class="row">
                            <div class="col-4">
                                <div>
                                    <strong>
                                    <span t-esc="o.company_id.name" /></strong>
                                </div>
                                <div>
                                    <address
                                        t-field="o.company_id.partner_id"
                                        t-options='{"widget": "contact", "fields": ["address"], "no_marker": true, "no_tag_br": true}'
                                    />
                                </div>
                                <div t-if="o.company_id.partner_id.vat">
                                    <strong>CIF:</strong>
                                    <span t-field="o.company_id.partner_id.vat" />
                                </div>
                                <div t-if="o.company_id.partner_id.nrc">
                                    <strong>NRC:</strong>
                                    <span t-field="o.company_id.partner_id.nrc" />
                                </div>
                            </div>
                            <div class="col-6 text-center">
                                <h4 class="text-center">
                                    <span
                                        t-if="o.journal_id.type == 'bank'"
                                    >Bank Statement</span>
                                    <span t-else="">Cash Statement</span>
                                </h4>
                                <h5>
                                    <strong>
                                        <span t-field="o.journal_id" />
                                        <t t-if="o.currency_id">-
                                            <span t-field="o.currency_id.name" />
                                        </t>
                                    </strong>
                                </h5>
                            </div>
                            <div class="col-2 text-right">
                                <div class="row">
                                    <span>Account</span>
                                </div>
                                <div class="row">
                                    <span
                                        t-esc="o.journal_id.default_account_id.code"
                                    />
                                </div>
                            </div>
                        </div>
                        <div style="border-top: 1px solid #000000;" />
                    </div>
                </div>
                <div class="article">
                    <div class="page">
                        <table
                            class="table table-sm table table-bordered"
                            style="width: 100%"
                        >
                            <thead>
                                <tr>
                                    <th>Nr. Crt</th>
                                    <th>Date</th>
                                    <th>Transaction No</th>
                                    <th>Appendix No</th>
                                    <th>Explanation</th>
                                    <th>Receipts</th>
                                    <th>Payments</th>
                                    <t t-if="with_currency">
                                        <th>Currency Amount</th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="nr_crt" t-value="1" />
                                <t t-set="total_received" t-value="0.0" />
                                <t t-set="total_paid" t-value="0.0" />
                                <tr>
                                    <td colspan="3" />
                                    <td colspan="2">
                                        <strong>Starting Balance</strong>
                                    </td>
                                    <td class="text-right">
                                        <strong>
                                            <span t-field="o.balance_start" />
                                        </strong>
                                    </td>
                                    <td />
                                </tr>
                                <tr t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-esc="nr_crt" />
                                            <t t-set="nr_crt" t-value="nr_crt + 1" />
                                        </td>
                                        <td>
                                            <span t-field="line.date" />
                                        </td>
                                        <td>
                                            <span t-field="line.payment_ref" />
                                        </td>
                                        <td>
                                            <span t-field="line.narration" />
                                        </td>
                                        <td>
                                            <span t-field="line.ref" />
                                        </td>
                                        <td class="text-right">
                                            <t t-if="line.amount&gt;0">
                                                <span
                                                    t-field="line.amount"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                                <t
                                                    t-set="total_received"
                                                    t-value="total_received+line.amount"
                                                />
                                            </t>
                                            <t t-else="">
                                                <span
                                                    t-esc="0.0"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </t>
                                        </td>
                                        <td class="text-right">
                                            <t t-if="line.amount&lt;0">
                                                <span
                                                    t-esc="-1 * line.amount"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                                <t
                                                    t-set="total_paid"
                                                    t-value="total_paid-line.amount"
                                                />
                                            </t>
                                            <t t-else="">
                                                <span
                                                    t-esc="0.0"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </t>
                                        </td>
                                        <td class="text-right" t-if="with_currency">
                                            <span
                                                t-esc="line.total_signed"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </tr>
                                <tr>
                                    <td colspan="3" />
                                    <td colspan="2">
                                        <strong>Total Balance</strong>
                                    </td>
                                    <td class="text-right">
                                        <strong
                                            t-esc="total_received"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                    <td class="text-right">
                                        <strong
                                            t-esc="total_paid"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" />
                                    <td colspan="2">
                                        <strong>Ending Balance</strong>
                                    </td>
                                    <td class="text-right">
                                        <strong>
                                            <span t-field="o.balance_end_real" />
                                        </strong>
                                    </td>
                                    <td />
                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <strong>Cashier</strong>
                                    </td>
                                    <td colspan="1">
                                    </td>
                                    <td colspan="3">
                                        <strong>Financial-accounting department</strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="footer">
                    <div>
                        <div class="row">
                            <div class="col-4">
                                <span
                                    t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"
                                />
                            </div>
                            <div class="col-6 text-center">
                            </div>
                            <div class="col-2 text-right">
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <span class="page" />
                                    </li>
                                    <li class="list-inline-item">/</li>
                                    <li class="list-inline-item">
                                        <span class="topage" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div style="border-top: 1px solid #000000;" />
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
