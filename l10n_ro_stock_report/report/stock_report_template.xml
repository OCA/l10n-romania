<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <template id="internal_layout">
        <div class="article">
            <link
                href="/l10n_ro_stock_report/static/src/css/report.css"
                rel="stylesheet"
            />
            <t t-raw="0" />
        </div>
        <div class="footer">
            <div class="row">
                <div class="col-6 custom_footer">
                    <span
                        t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"
                    />
                </div>
                <div class="col-6 text-right custom_footer">
                    <span class="page" />/
                    <span class="topage" />
                </div>
            </div>
        </div>
    </template>

    <template id="report_stock_card">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_ro_stock_report.internal_layout">
                    <t t-call="l10n_ro_stock_report.report_stock_card_report_base" />
                </t>
            </t>
        </t>
    </template>

    <template id="report_stock_card_report_base">
        <t t-foreach="o.found_product_ids" t-as="product">
            <div class="page">
                <div class="row">
                    <t t-set="title">Stock Card -
                        <t t-raw="product.name" />
                    </t>
                    <h4 class="mt0" t-esc="title" style="text-align: center;" />
                </div>
                <t t-call="l10n_ro_stock_report.report_stock_card_report_filters" />
                <div class="act_as_table data_table mt4" style="width: 100%;">
                    <t
                        t-set="initial"
                        t-value="o.line_product_ids.filtered(lambda l: l.product_id == product and l.referinta =='INITIALA')"
                    />
                    <t
                        t-set="finala"
                        t-value="o.line_product_ids.filtered(lambda l: l.product_id == product and l.referinta =='FINALA')"
                    />
                    <t t-call="l10n_ro_stock_report.report_stock_card_lines_header" />
                    <!-- Display initial lines -->
                    <div class="act_as_row lines">
                        <div class="act_as_cell" />
                        <div class="act_as_cell sold">
                            INITIAL
                        </div>
                        <div class="act_as_cell" />
                        <div class="act_as_cell" />
                        <div class="act_as_cell sold">
                            <div style="font-style: italic; font-weight: bold;">
                                <span t-field="initial.cantitate_initiala" />
                            </div>
                        </div>
                        <div class="act_as_cell sold">
                            <div style="font-style: italic; font-weight: bold;">
                                <span t-field="initial.valoare_initiala" />
                            </div>
                        </div>
                    </div>
                    <t
                        t-foreach="o.line_product_ids.filtered(lambda l: l.product_id == product and l.data)"
                        t-as="line_product"
                    >
                        <t t-call="l10n_ro_stock_report.report_stock_card_lines" />
                    </t>
                    <!-- Display header line-->
                    <div class="act_as_row lines">
                        <div class="act_as_cell" />
                        <div class="act_as_cell">
                            FINAL
                        </div>
                        <div class="act_as_cell" />
                        <div class="act_as_cell" />
                        <div class="act_as_cell">
                            <div style="font-style: italic; font-weight: bold;">
                                <span t-field="finala.cantitate_finala" />
                            </div>
                        </div>

                        <div class="act_as_cell sold">
                            <div style="font-style: italic; font-weight: bold;">
                                <span t-field="finala.valoare_finala" />
                            </div>
                        </div>
                    </div>
                </div>
                <p style="page-break-before:always;" />
            </div>
        </t>
    </template>


    <template id="report_stock_card_lines">
        <div class="act_as_row lines">
            <div class="act_as_cell left">
                <span t-field="line_product.data" t-options='{"widget": "date"}' />
            </div>
            <div class="act_as_cell left">
                <span t-esc="line_product.referinta" />
            </div>
            <div class="act_as_cell right">
                <span t-field="line_product.cantitate_intrata" />
            </div>
            <div class="act_as_cell right">
                <span t-field="line_product.valoare_intrata" />
            </div>
            <div class="act_as_cell right">
                <span t-field="line_product.cantitate_iesita" />
            </div>
            <div class="act_as_cell right">
                <span t-field="line_product.valoare_iesita" />
            </div>
        </div>
    </template>

    <template id="report_stock_card_lines_header">
        <div class="act_as_thead">
            <div class="act_as_row labels">
                <div class="act_as_cell">Data</div>
                <div class="act_as_cell">Reference</div>
                <div class="act_as_cell">Intrari</div>
                <div class="act_as_cell">Valoare Intrari</div>
                <div class="act_as_cell">Iesiri</div>
                <div class="act_as_cell">Valoare Iesiri</div>
            </div>
        </div>
    </template>

    <template id="report_stock_card_report_filters">
        <div class="act_as_table data_table" style="width: 100%;">
            <div class="act_as_row labels">
                <div class="act_as_cell">Date From</div>
                <div class="act_as_cell">Date To</div>
                <div class="act_as_cell">Location</div>
            </div>
            <div class="act_as_row">
                <div class="act_as_cell">
                    <span t-field="o.date_from" />
                </div>
                <div class="act_as_cell">
                    <span t-field="o.date_to" />
                </div>
                <div class="act_as_cell">
                    <span t-field="o.location_id" />
                </div>
            </div>
        </div>
    </template>

    <record id="action_report_stock_card" model="ir.actions.report">
        <field name="name">Stock Card</field>
        <field name="model">stock.daily.stock.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ro_stock_report.report_stock_card</field>
        <field name="report_file">l10n_ro_stock_report.report_stock_card</field>
        <field name="print_report_name">'Card'</field>
    </record>


</odoo>
