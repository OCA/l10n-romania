<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <report
            id="action_report_daily_stock_report"
            string="Daily stock report"
            model='stock.daily.stock.report'
            report_type="qweb-pdf"
            file="l10n_ro_stock_report.document_daily_stock_report"
            name="l10n_ro_stock_report.document_daily_stock_report"
        />
        <template id="document_daily_stock_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
<!--                        <t t-call="l10n_ro_config.report_address_company" />-->
                        <div class="page">
                            <t t-if="o.date_from == o.date_to">
                                <h1>Daily stock report</h1>
                            </t>
                            <t t-if="o.date_from != o.date_to">
                                <h1>Stock report</h1>
                            </t>
                            <div id="information" class="row mt32 mb32">
                                <div class="col-3 bm-2">
                                    <strong>From Date</strong>
                                    <p>
                                        <span
                                            t-field="o.date_from"
                                            t-options='{"widget": "date"}'
                                        />
                                    </p>
                                </div>
                                <div class="col-3 bm-2" t-if="o.date_from != o.date_to">
                                    <strong>To date</strong>
                                    <p>
                                        <span
                                            t-field="o.date_to"
                                            t-options='{"widget": "date"}'
                                        />
                                    </p>
                                </div>
                                <div class="col-3 bm-2">
                                    <strong>Location</strong>
                                    <p>
                                        <span t-field="o.location_id" />
                                    </p>
                                </div>
                            </div>
                            <t t-if="o.mode=='ref'">
                                <table class="table table-sm table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                <strong>Type</strong>
                                            </th>
                                            <th>
                                                <strong>Ref</strong>
                                            </th>
                                            <th class="text-right">
                                                <strong>Amount</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <t t-set="total" t-value="0.0" />
                                    <t t-set="total_in" t-value="0.0" />
                                    <t t-set="total_out" t-value="0.0" />
                                    <tbody>
                                        <tr t-foreach="o.line_ref_ids" t-as="ref">
                                            <t
                                                t-set="total"
                                                t-value="total + ref.amount"
                                            />
                                            <t t-if="ref.type=='in'">
                                                <t
                                                    t-set="total_in"
                                                    t-value="total_in + ref.amount"
                                                />
                                            </t>
                                            <t t-if="ref.type=='out'">
                                                <t
                                                    t-set="total_out"
                                                    t-value="total_out + ref.amount"
                                                />
                                            </t>
                                            <td>
                                                <span t-field="ref.type" />
                                            </td>
                                            <td>
                                                <span t-field="ref.ref" />
                                            </td>
                                            <td class="text-right">
                                                <span t-field="ref.amount" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div id="total" class="row justify-content-end">
                                    <div class="col-4 pull-right">
                                        <table class="table table-sm">
                                            <tr class="border-black">
                                                <td>
                                                    <strong>Total In</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span
                                                        t-esc="total_in"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"
                                                    />
                                                </td>
                                            </tr>
                                            <tr class="border-black">
                                                <td>
                                                    <strong>Total Out</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span
                                                        t-esc="total_out"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"
                                                    />
                                                </td>
                                            </tr>
                                            <tr class="border-black">
                                                <td>
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span
                                                        t-esc="total"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"
                                                    />
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </t>
                            <t t-if="o.mode=='product'">
                                <table class="table table-sm table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                <strong>Type</strong>
                                            </th>
                                            <th>
                                                <strong>Product</strong>
                                            </th>
                                            <th class="text-right">
                                                <strong>Quantity</strong>
                                            </th>
                                            <th class="text-right">
                                                <strong>Amount</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <t t-set="total_general" t-value="0.0" />
                                    <tbody>
                                        <t t-set="total" t-value="0.0" />
                                        <t t-set="rows" t-value="0.0" />
                                        <tr
                                            t-foreach="o.line_product_ids.filtered(lambda x : x.type == 'balance')"
                                            t-as="line"
                                        >
                                            <t
                                                t-set="total"
                                                t-value="total + line.amount"
                                            />
                                            <t t-set="rows" t-value="rows + 1" />
                                            <td>
                                                <span t-field="line.type" />
                                            </td>
                                            <td>
                                                <span t-field="line.product_id" />
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quantity" />
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.amount" />
                                            </td>
                                        </tr>
                                        <t
                                            t-set="total_general"
                                            t-value="total_general + total"
                                        />
                                        <tr
                                            t-if="total and rows>1"
                                            class="border-black"
                                        >
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td />
                                            <td />
                                            <td class="text-right">
                                                <span
                                                    t-esc="total"
                                                    t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"
                                                />
                                            </td>
                                        </tr>
                                        <t t-set="total" t-value="0.0" />
                                        <t t-set="rows" t-value="0.0" />
                                        <tr
                                            t-foreach="o.line_product_ids.filtered(lambda x : x.type == 'in')"
                                            t-as="line"
                                        >
                                            <t
                                                t-set="total"
                                                t-value="total + line.amount"
                                            />
                                            <t t-set="rows" t-value="rows + 1" />
                                            <td>
                                                <span t-field="line.type" />
                                            </td>
                                            <td>
                                                <span t-field="line.product_id" />
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quantity" />
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.amount" />
                                            </td>
                                        </tr>
                                        <t
                                            t-set="total_general"
                                            t-value="total_general + total"
                                        />
                                        <tr
                                            t-if="total and rows>1"
                                            class="border-black"
                                        >
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td />
                                            <td />
                                            <td class="text-right">
                                                <span
                                                    t-esc="total"
                                                    t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"
                                                />
                                            </td>
                                        </tr>
                                        <t t-set="total" t-value="0.0" />
                                        <t t-set="rows" t-value="0.0" />
                                        <tr
                                            t-foreach="o.line_product_ids.filtered(lambda x : x.type == 'out')"
                                            t-as="line"
                                        >
                                            <t
                                                t-set="total"
                                                t-value="total + line.amount"
                                            />
                                            <t t-set="rows" t-value="rows + 1" />
                                            <td>
                                                <span t-field="line.type" />
                                            </td>
                                            <td>
                                                <span t-field="line.product_id" />
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quantity" />
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.amount" />
                                            </td>
                                        </tr>
                                        <t
                                            t-set="total_general"
                                            t-value="total_general + total"
                                        />
                                        <tr
                                            t-if="total and rows>1"
                                            class="border-black"
                                        >
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td />
                                            <td />
                                            <td class="text-right">
                                                <span
                                                    t-esc="total"
                                                    t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"
                                                />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div id="total" class="row justify-content-end">
                                    <div class="col-4 col-sm-4 col-md-4">
                                        <table class="table table-sm">
                                            <tr class="border-black">
                                                <td>
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span
                                                        t-esc="total_general"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"
                                                    />
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
