<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_card_report_form" model="ir.ui.view">
        <field name="name">stock.daily.card.stock.report</field>
        <field name="model">stock.daily.stock.report</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group name="filters">
                    <group>
                        <field name="location_id" />
                        <field name="mode" invisible="1" />
                        <field name="product_ids" widget="many2many_tags" />
                    </group>
                    <group name="date_range">
                        <field
                            name="date_range_id"
                            domain="['|',('company_id','=',company_id), ('company_id','=',False)]"
                        />
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="company_id" invisible="1" />
                    </group>
                </group>
                <footer>
                    <button
                        name="button_show_card"
                        string="Show Card"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    <button
                        name="button_show_card_pdf"
                        string="Show Card Pdf"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="view_card_stock_report_line_tree" model="ir.ui.view">
        <field name="name">stock.card.stock.report.line</field>
        <field name="model">stock.daily.stock.report.line</field>
        <field name="arch" type="xml">
            <tree edit="0" create="0" import="0">
                <field name="product_id" />
                <field name="date" />
                <field name="reference" />
                <field name="quantity_initial" />
                <field name="amount_initial" />
                <field name="quantity_in" />
                <field name="amount_in" />
                <field name="quantity_out" />
                <field name="amount_out" />
                <field name="quantity_final" />
                <field name="amount_final" />
                <field name="partner_id" />
            </tree>
        </field>
    </record>


    <record id="view_card_stock_report_line_form" model="ir.ui.view">
        <field name="name">stock.card.stock.report.line</field>
        <field name="model">stock.daily.stock.report.line</field>
        <field name="arch" type="xml">
            <form edit="0" create="0" import="0">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" />
                            <field name="date" />
                        </group>
                        <group>
                            <field name="reference" />
                            <field name="partner_id" />
                        </group>
                        <group>
                            <field name="quantity_initial" />
                            <field name="amount_initial" />
                        </group>
                        <group>
                            <field name="quantity_in" />
                            <field name="amount_in" />
                        </group>
                        <group>
                            <field name="quantity_out" />
                            <field name="amount_out" />
                        </group>
                        <group>
                            <field name="quantity_final" />
                            <field name="amount_final" />
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id="action_card_stock_report" model="ir.actions.act_window">
        <field name="name">Stock Card Report</field>
        <field name="res_model">stock.daily.stock.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="l10n_ro_stock_report.view_stock_card_report_form" />
        <field name="target">new</field>
    </record>


    <menuitem
        id="menu_card_stock_report"
        name="Stock Card Report"
        action="action_card_stock_report"
        parent="stock.menu_warehouse_report"
        groups="stock.group_stock_user"
    />


    <record id="action_card_stock_report_line" model="ir.actions.act_window">
        <field name="name">Stock Card Report</field>
        <field name="res_model">stock.daily.stock.report.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('report_id','=',active_id)]</field>
        <field
            name="view_id"
            ref="l10n_ro_stock_report.view_card_stock_report_line_tree"
        />
    </record>


</odoo>
