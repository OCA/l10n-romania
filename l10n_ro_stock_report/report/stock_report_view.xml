<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_daily_stock_report_form" model="ir.ui.view">
        <field name="name">stock.daily.stock.report</field>
        <field name="model">stock.daily.stock.report</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group name="filters">
                    <group>
                        <field name="location_id" />
                        <field name="mode" invisible="1" />
                        <field name="product_ids" widget="many2many_tags" />
                    </group>
                    <group name="date_range">
                        <field
                            name="date_range_id"
                            domain="['|',('company_id','=',company_id), ('company_id','=',False)]"
                        />
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="company_id" invisible="1" />
                    </group>
                </group>
                <footer>
                    <button
                        name="button_show"
                        string="Show"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="view_stock_card_report_form" model="ir.ui.view">
        <field name="name">stock.daily.card.stock.report</field>
        <field name="model">stock.daily.stock.report</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group name="filters">
                    <group>
                        <field name="location_id" />
                        <field name="mode" invisible="1"/>
                        <field name="product_id" />
                    </group>
                    <group name="date_range">
                        <field
                            name="date_range_id"
                            domain="['|',('company_id','=',company_id), ('company_id','=',False)]"
                        />
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="company_id" invisible="1" />
                    </group>
                </group>
                <footer>
                    <button
                        name="button_show_card"
                        string="Show Card"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    <button
                        name="button_show_card_pdf"
                        string="Show Card Pdf"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

     <record id="view_card_stock_report_line_tree" model="ir.ui.view">
        <field name="name">stock.card.stock.report.line</field>
        <field name="model">stock.daily.stock.report.line</field>
        <field name="arch" type="xml">
            <tree edit="0" create="0" import="0">
                <field name="product_id" />
                <field name="data" />
                <field name="referinta" />
                <field name="cantitate_initiala" />
                <field name="valoare_initiala" />
                <field name="cantitate_intrata" />
                <field name="valoare_intrata" />
                <field name="cantitate_iesita" />
                <field name="valoare_iesita" />
                <field name="cantitate_finala" />
                <field name="valoare_finala" />
                <field name="partener" />
            </tree>
        </field>
    </record>

    <record id="action_daily_stock_report" model="ir.actions.act_window">
        <field name="name">Stock Report</field>
        <field name="res_model">stock.daily.stock.report</field>
        <field name="view_mode">form</field>
         <field
            name="view_id"
            ref="l10n_ro_stock_report.view_daily_stock_report_form"
        />
        <field name="target">new</field>
    </record>
    <record id="action_card_stock_report" model="ir.actions.act_window">
        <field name="name">Stock Card Report</field>
        <field name="res_model">stock.daily.stock.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="l10n_ro_stock_report.view_stock_card_report_form" />
         <field name="target">new</field>
    </record>
    <menuitem
        id="menu_daily_stock_report"
        name="Stock Report"
        action="action_daily_stock_report"
        parent="stock.menu_warehouse_report"
        groups="account.group_account_user"
    />
     <menuitem
        id="menu_card_stock_report"
        name="Stock Card Report"
        action="action_card_stock_report"
        parent="stock.menu_warehouse_report"
        groups="account.group_account_user"
    />
    <record id="action_daily_stock_report_line" model="ir.actions.act_window">
        <field name="name">Stock Report</field>
        <field name="res_model">stock.daily.stock.report.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('report_id','=',active_id)]</field>
    </record>

     <record id="action_card_stock_report_line" model="ir.actions.act_window">
         <field name="name">Stock Card Report</field>
         <field name="res_model">stock.daily.stock.report.line</field>
         <field name="view_mode">tree,form</field>
         <field name="domain">[('report_id','=',active_id)]</field>
         <field
            name="view_id"
            ref="l10n_ro_stock_report.view_card_stock_report_line_tree"
        />
    </record>

    <record id="view_daily_stock_report_line_search" model="ir.ui.view">
        <field name="name">stock.daily.stock.report.line.search</field>
        <field name="model">stock.daily.stock.report.line</field>
        <field name="arch" type="xml">
            <search string="Stock Report">
                <field name="product_id" />
                <field name="data" />
                <field name="referinta" />
                <field name="partener" />
                <filter string="Date" name="filter_date" date="data" />
                <group expand="1" string="Group By">
                    <filter
                        string="Product"
                        name="product"
                        context="{'group_by':'product_id'}"
                    />
                    <filter string="Data" name="data" context="{'group_by':'data'}" />
                    <filter
                        string="Partner"
                        name="partener"
                        context="{'group_by':'partener'}"
                    />
                    <filter
                        string="Referinta"
                        name="referinta"
                        context="{'group_by':'referinta'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="view_daily_stock_report_line_tree" model="ir.ui.view">
        <field name="name">stock.daily.stock.report.line</field>
        <field name="model">stock.daily.stock.report.line</field>
        <field name="arch" type="xml">
            <tree edit="0" create="0" import="0">
                <field name="product_id" />
                <field name="data" />
                <field name="cantitate_initiala" sum="1" />
                <field name="valoare_initiala" sum="1" />
                <field name="cantitate_intrata" sum="1" />
                <field name="valoare_intrata" sum="1" />
                <field name="cantitate_iesita" sum="1" />
                <field name="valoare_iesita" sum="1" />
                <field name="cantitate_finala" sum="1" />
                <field name="valoare_finala" sum="1" />
                <field name="referinta" />
                <field name="partener" />
            </tree>
        </field>
    </record>

     <template id="internal_layout">
         <div class="article">
            <link href="/l10n_ro_stock_report/static/src/css/report.css" rel="stylesheet"/>
            <t t-raw="0"/>
        </div>
        <div class="footer">
            <div class="row">
                <div class="col-6 custom_footer">
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                </div>
                <div class="col-6 text-right custom_footer">
                    <span class="page"/>/<span class="topage"/>
                </div>
            </div>
        </div>
    </template>

     <template id="report_stock_card">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="l10n_ro_stock_report.internal_layout">
                    <t t-call="l10n_ro_stock_report.report_stock_card_report_base"/>
                </t>
            </t>
        </t>
    </template>

     <template id="report_stock_card_report_base">
        <t t-foreach="o.product_ids" t-as="product">
            <div class="page">
                <div class="row">
                    <t t-set="title">Stock Card - <t t-raw="product.name"/></t>
                    <h4 class="mt0" t-esc="title" style="text-align: center;"/>
                </div>
                <t t-call="l10n_ro_stock_report.report_stock_card_report_filters"/>
                <div class="act_as_table data_table mt4" style="width: 100%;">
                    <t t-set="initial" t-value="o.line_product_ids.filtered(lambda l: l.product_id == product and l.referinta =='INITIALA')"/>
                    <t t-set="finala" t-value="o.line_product_ids.filtered(lambda l: l.product_id == product and l.referinta =='FINALA')"/>
                    <t t-call="l10n_ro_stock_report.report_stock_card_lines_header"/>
                    <!-- Display initial lines -->
                     <div class="act_as_row lines">
                        <div class="act_as_cell"/>
                        <div class="act_as_cell">
                            INITIAL
                        </div>

                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(initial.cantitate_initiala)"/>
                        </div>
                         <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(initial.valoare_initiala)"/>
                        </div>
                    </div>
                    <t t-foreach="o.line_product_ids.filtered(lambda l: l.product_id == product and l.data)" t-as="line_product">
                        <t t-call="l10n_ro_stock_report.report_stock_card_lines"/>
                        </t>
                     <!-- Display header line-->
                    <div class="act_as_row lines">
                        <div class="act_as_cell"/>
                        <div class="act_as_cell">
                            FINAL
                        </div>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(finala.cantitate_finala)"/>
                        </div>
                         <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(finala.valoare_finala)"/>
                        </div>
                    </div>
                 </div>
                  <p style="page-break-before:always;"></p>
            </div>
        </t>
     </template>


     <template id="report_stock_card_lines">
          <div class="act_as_row lines">
            <div class="act_as_cell left">
                <t t-esc="line_product.data"/>
            </div>
            <div class="act_as_cell left">
                <t t-esc="line_product.referinta"/>
            </div>
            <div class="act_as_cell right">
                <t t-esc="'{0:,.3f}'.format(line_product.cantitate_intrata)"/>
            </div>
               <div class="act_as_cell right">
                <t t-esc="'{0:,.3f}'.format(line_product.valoare_intrata)"/>
            </div>
               <div class="act_as_cell right">
                <t t-esc="'{0:,.3f}'.format(line_product.cantitate_iesita)"/>
            </div>
               <div class="act_as_cell right">
                <t t-esc="'{0:,.3f}'.format(line_product.valoare_iesita)"/>
            </div>
        </div>
     </template>

     <template id="report_stock_card_lines_header">
        <div class="act_as_thead">
            <div class="act_as_row labels">
                <div class="act_as_cell">Data</div>
                <div class="act_as_cell">Reference</div>
                <div class="act_as_cell">Intrari</div>
                <div class="act_as_cell">Valoare Intrari</div>
                <div class="act_as_cell">Iesiri</div>
                <div class="act_as_cell">Valoare Iesiri</div>
            </div>
        </div>
    </template>

    <template id="report_stock_card_report_filters">
        <div class="act_as_table data_table" style="width: 100%;">
            <div class="act_as_row labels">
                <div class="act_as_cell">Date From</div>
                <div class="act_as_cell">Date To</div>
                <div class="act_as_cell">Location</div>
            </div>
            <div class="act_as_row">
                <div class="act_as_cell">
                    <span t-field="o.date_from"/>
                </div>
                <div class="act_as_cell">
                    <span t-field="o.date_to"/>
                </div>
                <div class="act_as_cell">
                    <span t-field="o.location_id"/>
                </div>
            </div>
        </div>
    </template>

     <record id="action_report_stock_card" model="ir.actions.report">
            <field name="name">Stock Card</field>
            <field name="model">stock.daily.stock.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_ro_stock_report.report_stock_card</field>
            <field name="report_file">l10n_ro_stock_report.report_stock_card</field>
            <field name="print_report_name">'Card'</field>
     </record>



</odoo>
