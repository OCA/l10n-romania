		           <tbody>
                          <tr t-foreach="lines" t-as="l" class="text-right">
							<t t-call="l10n_ro_account_report_journal.purchase_tbody_all_lines_without_total"/>
                        </tr>
                    </tbody>
                     <tfoot>
						<t t-set="l" t-value="totals"/>
                        <tr style="font-weight:bold" class="text-right">
                            <td colspan="6" >Totals</td>
	        				<t t-call="l10n_ro_account_report_journal.purchase_report_numbers_and_total"/>
							<td/>
						</tr>
					</tfoot>
