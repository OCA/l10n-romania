<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">>account.move.form</field>
        <field name="model">account.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <button name="button_draft" position="after">
                <button
                    type="object"
                    name="attach_ubl_xml_file_button"
                    string="eFactura"
                    help="Attach the UBL XML file to the invoice"
                    states="posted"
                />
            </button>
            <xpath expr="//div[@name='journal_div']" position="after">
                <label
                    for="l10n_ro_edi_download"
                    string="ID eFactura"
                    attrs="{'invisible': ['|', ('edi_state', '=', False), ('state', '=', 'draft'),('move_type', '==', 'out_invoice')]}"
                />
                 <div
                    name="journal_div"
                    attrs="{'invisible': ['|', ('edi_state', '=', False), ('state', '=', 'draft'),('move_type', '==', 'out_invoice')]}"
                    class="d-flex"
                >
                    <field name="l10n_ro_edi_download" />

                    <button
                        type="object"
                        class="oe_link"
                        icon="fa-download"
                        name="l10n_ro_download_zip_anaf"
                        attrs="{'invisible': [('l10n_ro_edi_download', '=', False)]}"
                        help="Download ZIP"
                    />
                     </div>
            </xpath>
        </field>
    </record>
</odoo>
