<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">>account.move.form</field>
        <field name="model">account.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <button name="button_draft" position="after">
                <button
                    type="object"
                    name="attach_ubl_xml_file_button"
                    string="eFactura"
                    help="Attach the UBL XML file to the invoice"
                    states="posted"
                />
            </button>
            <xpath expr="//div[@name='journal_div']" position="after">
                <label
                    for="l10n_ro_edi_download"
                    string="ID eFactura"
                    attrs="{'invisible': ['|',
                     ('edi_state', '=', False),
                     ('state', '=', 'draft'),
                     ('move_type', 'in', ['out_invoice','out_refund'])]}"
                />
                <div
                    name="journal_div"
                    attrs="{'invisible': ['|',
                    ('edi_state', '=', False),
                    ('state', '=', 'draft'),
                    ('move_type', 'in', ['out_invoice','out_refund'])]}"
                    class="o_row"
                >
                    <field
                        name="l10n_ro_edi_download"
                        attrs="{'readonly': ['|',
                        ('move_type', 'in', ['out_invoice','out_refund']),
                        ('state','==','posted')]}"
                    />
                    <button
                        type="object"
                        class="oe_link badge bg-primary"
                        icon="fa-cloud-download"
                        string="Download"
                        name="l10n_ro_download_zip_anaf"
                        attrs="{'invisible': ['|',
                        ('l10n_ro_edi_download', '=', False),
                        ('move_type','not in',['in_invoice','in_refund'])
                        ]}"
                        help="Download ZIP with signed XML file from ANAF"
                    />
                    <button
                        type="object"
                        class="oe_link badge bg-danger"
                        icon="fa-exclamation-triangle"
                        string="Download Errors"
                        name="l10n_ro_download_zip_anaf"
                        attrs="{'invisible': ['|',('l10n_ro_edi_download', '=', False),('edi_state','!=','to_send')]}"
                        help="Download ZIP with errors from ANAF"
                    />
                    <button
                        type="object"
                        class="oe_link badge bg-success"
                        icon="fa-check-circle"
                        string="Download Signed"
                        name="l10n_ro_download_zip_anaf"
                        attrs="{'invisible': ['|',('l10n_ro_edi_download', '=', False),('edi_state','!=','sent')]}"
                        help="Download ZIP with signed XML file from ANAF"
                    />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
