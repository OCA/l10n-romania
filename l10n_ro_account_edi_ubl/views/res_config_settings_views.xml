<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_ro_config.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='ro_e_factura']" position="inside">
                <setting
                    id="module_l10n_ro_account_edi_ubl"
                    help="Add more settings in the eFactura workflow."
                >
                    <field name="module_l10n_ro_account_edi_ubl" />
                </setting>
                <setting
                    id="l10n_ro_edi_residence"
                    invisible="module_l10n_ro_account_edi_ubl == False"
                    help="Period of residence for the e-Invoice after which it is automatically sent"
                    company_dependent="1"
                >
                    <field name="l10n_ro_edi_residence" />
                </setting>
                <setting
                    id="l10n_ro_default_cius_pdf_report"
                    invisible="module_l10n_ro_account_edi_ubl == False"
                    help="Company PDF invoice report to be added to the e-Invoice XML. If not set default PDF report will be used."
                    company_dependent="1"
                >
                    <field name="l10n_ro_default_cius_pdf_report" />
                </setting>
                <setting
                    id="l10n_ro_download_einvoices"
                    invisible="module_l10n_ro_account_edi_ubl == False"
                    help="Download e-Invoices automatically from ANAF website. It will create a draft invoice that you will have to check and posted afterwards."
                    company_dependent="1"
                >
                    <field name="l10n_ro_download_einvoices" />
                </setting>
                <setting
                    id="l10n_ro_download_einvoices_start_date"
                    help="Start date that Odoo will create supplier invoices downloaded from ANAF website."
                    invisible="l10n_ro_download_einvoices == False"
                    company_dependent="1"
                >

                    <field name="l10n_ro_download_einvoices_start_date" />
                </setting>
                <setting
                    id="l10n_ro_download_einvoices_days"
                    help="Define the maximum number of days that Odoo will check supplier e-Invoices to download."
                    invisible="l10n_ro_download_einvoices == False"
                    company_dependent="1"
                >
                    <field name="l10n_ro_download_einvoices_days" />
                </setting>
                <setting
                    id="l10n_ro_credit_note_einvoice"
                    invisible="module_l10n_ro_account_edi_ubl == False"
                    help="Credit Note on e-Invoice."
                    company_dependent="1"
                >
                    <field name="l10n_ro_credit_note_einvoice" />
                </setting>
                <setting
                    id="l10n_ro_edi_error_notify_users"
                    invisible="module_l10n_ro_account_edi_ubl == False"
                    string="EDI Error Notification Users"
                    company_dependent="1"
                >
                    <field
                        name="l10n_ro_edi_error_notify_users"
                        widget="many2many_tags"
                    />
                </setting>
            </xpath>
        </field>
    </record>

</odoo>
