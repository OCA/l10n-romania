<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_ro_config.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="module_l10n_ro_account_anaf_sync" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" id="l10n_ro_edi_manual">
                    <div class="o_setting_left_pane">
                        <field name="l10n_ro_edi_manual" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="l10n_ro_edi_manual" />
                        <span
                            class="fa fa-lg fa-building-o"
                            title="Values set here are company-specific."
                            role="img"
                            aria-label="Values set here are company-specific."
                            groups="base.group_multi_company"
                        />
                        <div class="text-muted">
                            Send e-Invoice manually from the Client Action
                        </div>


                      <label
                            for="l10n_ro_edi_residence"
                            class="col-lg-3 o_light_label"
                        />
                        <field name="l10n_ro_edi_residence" />
                        <div class="text-muted">
                            Period of residence for the e-Invoice after which it is automatically sent
                        </div>

                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
