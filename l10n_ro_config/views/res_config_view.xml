<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.romania</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="150"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Romania" data-key="l10n_ro_config" groups="base.group_no_one">
                    <h2>General</h2>
                    <div class="row mt16 o_settings_container">
                        <div id="module_partners_unique" class="col-xs-12 col-md-6 o_setting_box" title="Add Unicity on Partners">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_ro_partner_unique"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_ro_partner_unique"/>
                                <div class="text-muted">
                                    Add Unicity on Partners.
                                </div>
                            </div>
                        </div>
                        <div id="module_create_by_vat" class="col-xs-12 col-md-6 o_setting_box" title="Create Romanian Partners from Anaf, Openapi">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_ro_partner_create_by_vat"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_ro_partner_create_by_vat"/>
                                <div class="text-muted">
                                    Create Romanian Partners from Anaf, Openapi.
                                </div>
                            </div>
                        </div>
                        <div id="module_siruta" class="col-xs-12 col-md-6 o_setting_box" title="Add Siruta on Addresses">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_ro_siruta"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_ro_siruta"/>
                                <div class="text-muted">
                                    Add Siruta on Addresses.
                                </div>
                                <div class="content-group" attrs="{'invisible': [('module_l10n_ro_siruta', '=', False)]}">
                                    <div class="content-group mt16">
                                        <label for="siruta_update"/>
                                        <field name="siruta_update"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Human Resources</h2>
                    <div class="row mt16 o_settings_container">
                        <div id="module_l10n_ro_hr" class="col-xs-12 col-md-6 o_setting_box" title="Romania - Human Resources">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_ro_hr"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_ro_hr"/>
                                <div class="text-muted">
                                    Romania - Human Resources.
                                </div>
                                <div class="content-group" attrs="{'invisible': [('module_l10n_ro_hr', '=', False)]}">
                                    <div class="content-group mt16">
                                        <label for="hr_job_update"/>
                                        <field name="hr_job_update"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="module_l10n_ro_hr_contract" class="col-xs-12 col-md-6 o_setting_box" title="Romania - Employee Contracts">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_ro_hr_contract"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_ro_hr_contract"/>
                                <div class="text-muted">
                                    Romania - Employee Contracts.
                                </div>
                                <div class="content-group" attrs ="{'invisible': [('module_l10n_ro_hr_contract', '=', False)]}">
                                    <div class="content-group mt16">
                                        <label for="caen_update"/>
                                        <field name="caen_update"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="module_l10n_ro_hr_medical_holidays" class="col-xs-12 col-md-6 o_setting_box" title="Romania - Medical Leaves">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_ro_hr_medical_holidays"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_ro_hr_medical_holidays"/>
                                <div class="text-muted">
                                    Romania - Medical Leaves.
                                </div>
                                <div class="content-group" attrs ="{'invisible': [('module_l10n_ro_hr_medical_holidays', '=', False)]}">
                                    <div class="content-group mt16">
                                        <label for="medical_update"/>
                                        <field name="medical_update"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="module_l10n_ro_hr_payroll" class="col-xs-12 col-md-6 o_setting_box" title="Romania - Payroll">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_ro_hr_payroll"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_ro_hr_payroll"/>
                                <div class="text-muted">
                                    Romania - Payroll.
                                </div>
                            </div>
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_ro_hr_payroll_account"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_ro_hr_payroll_account"/>
                                <div class="text-muted">
                                    Romania - Payroll Account.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
