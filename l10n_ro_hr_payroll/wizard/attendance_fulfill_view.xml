<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_hr_attendance_fulfill_form" model="ir.ui.view">
            <field name="name">hr.attendance.fulfill.form</field>
            <field name="model">hr.attendance.fulfill</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Enter the dates : ALL days between those dates will be completed.">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="department_id" select="1"/>
                    <field name="description" colspan="4"/>
                    <group colspan="4" col="6">
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="gtk-ok" string="Fill in attendance" name="fulfill_attendance" type="object"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_hr_attendance_fulfill" model="ir.actions.act_window">
            <field name="name">Fill in attendance</field>
            <field name="res_model">hr.attendance.fulfill</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_hr_attendance_fulfill_form"/>
            <field name="target">new</field>
        </record>
        
        <record id="ir_action_hr_timesheet_attendance_wizard" model="ir.values">
            <field name="key2">client_action_multi</field>
            <field name="model">hr_timesheet_sheet.sheet</field>
            <field name="name">Fill in Attendance</field>
            <field eval="'ir.actions.act_window,%d'%action_hr_attendance_fulfill" name="value"/>
            <field name="key">action</field>
        </record>
        
        <menuitem action="action_hr_attendance_fulfill" id="menu_hr_attendance_fulfill"
            parent="hr_attendance.menu_hr_attendance" sequence="7"/>

</data>
</openerp>
