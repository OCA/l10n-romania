            <field name="model">res.company</field>
            <field name="inherit_id" ref="l10n_ro_hr.view_payroll_config_page_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='caen_config']" position="after">
                    <group name="meal_vouchers" string="Meal Vouchers">
                        <field name="meal_voucher_ids"/>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
