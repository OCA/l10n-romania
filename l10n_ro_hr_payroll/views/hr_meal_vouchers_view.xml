<?xml version="1.0"?>
<odoo>

    <record id="res_company_hr_meal_vouchers_tree" model="ir.ui.view">
        <field name="name">res.company.meal.vouchers.tree</field>
        <field name="model">res.company.meal.voucher</field>
        <field name="arch" type="xml">
            <tree string="Meal Vouchers Configuration">
                <field name="company_id"/>
                <field name="date_from"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record id="res_company_hr_meal_vouchers_form" model="ir.ui.view">
        <field name="name">res.company.meal.vouchers.form</field>
        <field name="model">res.company.meal.voucher</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form string="Meal Vouchers Configuration">
                <div col="4">
                    <field name="company_id" groups="base.group_multi_company" widget="selection" class="oe_inline"/>
                </div>
                <group colspan="4">
                    <group col="2">
                        <field name="date_from" class="oe_inline"/>
                    </group>
                    <group col="2">
                        <field name="value" class="oe_inline"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="meal_voucher_configuration" model="ir.actions.act_window">
        <field name="name">Meal Vouchers Configuration</field>
        <field name="res_model">res.company.meal.voucher</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="meal_voucher_configuration"
              id="menu_meal_voucher_configuration"
              parent="hr_payroll.menu_hr_payroll_configuration"
              groups="hr_payroll.group_hr_payroll_user"
              sequence="40"/>

    <record id="hr_meal_vouchers_tree" model="ir.ui.view">
        <field name="name">hr.meal.vouchers.tree</field>
        <field name="model">hr.meal.vouchers</field>
        <field name="arch" type="xml">
            <tree string="Meal Vouchers">
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_meal_vouchers_form" model="ir.ui.view">
        <field name="name">hr.meal.vouchers.form</field>
        <field name="model">hr.meal.vouchers</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form string="Meal Vouchers">
                <header>
                    <button string="Get # of Meal Vouchers" name="build_lines" type="object" class="oe_highlight"/>
                </header>
                <group colspan="4">
                    <group col="2">
                        <field name="company_id" groups="base.group_multi_company" widget="selection"
                               class="oe_inline"/>
                    </group>
                    <group col="2">
                        <label for="date_from" string="Period"/>
                        <div>
                            <field name="date_from" class="oe_inline"/>
                            -
                            <field name="date_to" class="oe_inline"/>
                        </div>
                    </group>
                </group>
                <group colspan="4">
                    <field name="line_ids" nolabel="1" editable="bottom"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_meal_vouchers_line_form" model="ir.ui.view">
        <field name="name">hr.meal.vouchers.line.form</field>
        <field name="model">hr.meal.vouchers.line</field>
        <field name="arch" type="xml">
            <form string="Meal Voucher Lines">
                <group colspan="4">
                    <group col="2">
                        <field name="vouchers_no" readonly="1"/>
                        <field name="voucher_value" readonly="1"/>
                        <field name="employee_id"/>
                        <field name="contract_id" domain="[('employee_id','=',employee_id)]"/>
                    </group>
                    <group col="2">
                        <field name="serial_from"/>
                        <field name="serial_to"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_meal_vouchers_line_tree" model="ir.ui.view">
        <field name="name">hr.meal.vouchers.line.tree</field>
        <field name="model">hr.meal.vouchers.line</field>
        <field name="arch" type="xml">
            <tree string="Meal Voucher Lines">
                <field name="vouchers_no"/>
                <field name="voucher_value"/>
                <field name="employee_id"/>
                <field name="contract_id"/>
                <field name="serial_from"/>
                <field name="serial_to"/>
            </tree>
        </field>
    </record>

    <record id="open_meal_vouchers_view" model="ir.actions.act_window">
        <field name="name">Meal Vouchers</field>
        <field name="res_model">hr.meal.vouchers</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="open_meal_vouchers_view"
              id="menu_hr_meal_vouchers_view"
              parent="hr_payroll.menu_hr_payroll_root"
              groups="hr_payroll.group_hr_payroll_user"
              sequence="40"/>
</odoo>
